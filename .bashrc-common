#load color codes
source ~/.ansi-colors

# Custom binaries
export PATH="${PATH}:~/config/binaries/$(uname -s)/$(uname -m)/"

#check if $1 exists
function command_exists() {
   hash "$1" 2> /dev/null
}

#aliases
alias cd..='cd ..'
if [[ $(uname) == "Darwin" ]]; then
    alias ls='ls -G'
    alias cp='cp -v'
else
    alias ls='ls --color=auto'
    alias cp='cp -v --reflink=auto' #don't duplicate when copying on CoW filesystems like BtrFS
    alias open='xdg-open'
    alias rmdir='rmdir -v'
fi
if command_exists exa; then
   alias ls='exa'
   alias ll='exa -lg --git'
   alias lsd='exa -d'
   alias lal='exa -alg'
   alias tree='exa --tree'
else
   alias la='ls -a'
   alias ll='ls -l'
   alias lsd='ls -d'
   alias lal="ls -al"
fi
alias grep='grep --color=auto'
alias more='less'
alias xz='xz --threads=0'
alias mv='mv -v'
alias rm='rm -v'
alias tmux='env SHLVL=0 tmux'
alias :q='exit'
alias :w='echo This is not vim you idiot!'
alias :e=vim

if command_exists zellij; then
    alias tmux='zellij'
fi

if command_exists bat; then
    alias less='bat --paging=always'
fi

function cd {
    if [[ "$1" =~ \.\.*$ ]]; then
        # cd ... to go 2 higher, cd .... to go 3 higher and so on
        for (( i=0; i<${#1}-1; i++ )); do
            builtin cd .. 1> /dev/null
        done
    else
        builtin cd "${@}" 1> /dev/null
    fi
}

#run a program detached from the current terminal
function detach() {
    nohup "$@" > /dev/null &
}

function vim() {
    if command_exists nvim; then
        nvim "$@"
    elif command_exists vim; then
        command vim "$@"
    fi
}

# Enable sccache if it is installed
if [[ -x "$HOME/.cargo/bin/sccache" ]]; then
   export RUSTC_WRAPPER="$HOME/.cargo/bin/sccache"
fi

if command_exists starship; then
   eval "$(starship init bash)"
else
   echo "WARNING: starship binary missing for this platform"
fi

#colors in manpages
man() {
            #TODO: use color codes from .ansi-colors
            env \
                    LESS_TERMCAP_mb="$(printf "\e[1;31m")" \
                    LESS_TERMCAP_md="$(printf "\e[1;31m")" \
                    LESS_TERMCAP_me="$(printf "\e[0m")" \
                    LESS_TERMCAP_se="$(printf "\e[0m")" \
                    LESS_TERMCAP_so="$(printf "\e[1;44;33m")" \
                    LESS_TERMCAP_ue="$(printf "\e[0m")" \
                    LESS_TERMCAP_us="$(printf "\e[1;32m")" \
                    LANG='' \
                            man "$@"
}

#environment variables
export HISTCONTROL=ignorespace
if command_exists nvim; then
   export VISUAL=nvim
   export EDITOR=nvim
elif command_exists vim; then
   export VISUAL=vim
   export EDITOR=vim
fi
if command_exists less; then
   export PAGER=less
fi
